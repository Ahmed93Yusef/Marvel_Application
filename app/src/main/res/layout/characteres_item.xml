<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="items"
            type="com.example.marvel_application.model.remote.response.characters.Characters" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_characters"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:ImageUrl="@{items.thumbnail}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="sample/avatar"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{items.name}"
            android:textSize="22sp"
            tools:text="Name"
            app:layout_constraintStart_toStartOf="@id/image_characters"
            app:layout_constraintEnd_toEndOf="@id/image_characters"
            app:layout_constraintTop_toBottomOf="@id/image_characters"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>