<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="items"
            type="com.example.marvel_application.domain.models.Event" />

        <variable
            name="listener"
            type="com.example.marvel_application.ui.home.HomeInteractionListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:onClick="@{() -> listener.onItemClicked(items.id)}"
        >

        <ImageView
            android:id="@+id/image_characters"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:ImagePath="@{items.imagePath}"
            app:ImageExtension="@{items.imageExtension}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            tools:text="Name"
            android:text="@{items.name}"
            app:layout_constraintStart_toStartOf="@id/image_characters"
            app:layout_constraintEnd_toEndOf="@id/image_characters"
            app:layout_constraintTop_toBottomOf="@id/image_characters"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>